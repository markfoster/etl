<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="info"/>
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} [%t] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>
    <appender name="rolling-file" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="etl.log"/>
        <param name="Threshold" value="debug"/>
        <param name="MaxFileSize" value="6000KB"/>
        <param name="MaxBackupIndex" value="4"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %l - %m%n"/>
        </layout>
    </appender>

  <category name="org.hibernate.SQL">  
    <priority value="debug"/>  
  </category>  
   
<!--
  <category name="org.hibernate.type">  
    <priority value="warn"/>  
  </category>  
-->

    <logger name="org.hibernate">
        <level value="warn" />
    </logger>

    <logger name="log4j.logger.org.springframework.context.support">
        <level value="warn" />
    </logger>
    <logger name="log4j.logger.org.springframework">
        <level value="warn" />
    </logger>
    <logger name="log4j.logger.org.springframework.orm">
        <level value="warn" />
    </logger>
    <logger name="log4j.logger.org.springframework.transaction">
        <level value="warn" />
    </logger>

    <root>
        <priority value ="debug" />
        <appender-ref ref="console" />
        <appender-ref ref="rolling-file" />
    </root>

</log4j:configuration>

